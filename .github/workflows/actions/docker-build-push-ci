name: docker-build-push-ci
inputs:
  service-name:
    description: 'folder name of service'
    required: true
  docker-image-name:
    description: 'name of docker image'

on:
  workflow_dispatch
  
jobs:
  build:
    runs-on: ubuntu-latest
    
    steps:
       - uses: actions/checkout@v3
       - name: Docker Hub Login
         uses: docker/login-action@v3
         with:
          username: ${{ secrets.DOCKER_USERNAME }}
          password: ${{ secrets.DOCKER_PASSWORD }}

       - name: Build Docker Image
         run:  | 
           docker build . --file ./src/${{ inputs.service-name }}/Dockerfile --tag adamoctoclose/${{ inputs.docker-image-name }}:1.0
           docker push adamoctoclose/${{ inputs.docker-image-name }}:1.0
