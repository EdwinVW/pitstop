@model Pitstop.WebApp.ViewModels.WorkshopManagementFinishViewModel
@{
    ViewData["Title"] = "Finish Maintenance job";
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

<h3 id="PageTitle">Workshop Management - finish maintenance job</h3>

<form asp-controller="WorkshopManagement" asp-action="FinishMaintenanceJob" method="post">
    <div class="form-group">
        <label asp-for="ActualStartTime"></label>
        <input asp-for="ActualStartTime" type="text" class="form-control" />
        <span asp-validation-for="ActualStartTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ActualEndTime"></label>
        <input asp-for="ActualEndTime" type="text" class="form-control" />
        <span asp-validation-for="ActualEndTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Notes"></label>
        <input asp-for="Notes" type="text" class="form-control" />
        <span asp-validation-for="Notes" class="text-danger"></span>
    </div>
    <input asp-for="Date" type="hidden" />
    <input asp-for="Id" type="hidden" />
    <span><button id="CompleteButton" type="submit" class="btn btn-default">Complete</button></span>
    <span><a id="BackButton" asp-action="Details" asp-controller="WorkshopManagement" asp-route-planningDate="@Model.Date.ToString("yyyy-MM-dd")" asp-route-jobId="@Model.Id" class="btn btn-default">Cancel</a></span>
</form>


