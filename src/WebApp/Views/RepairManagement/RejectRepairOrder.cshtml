@model Pitstop.WebApp.ViewModels.RepairManagementRejectRepairOrderViewModel
@{
    ViewData["Title"] = "Reject Repair Order";
}


<h1>Reject Repair Order</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-controller="RepairManagement" asp-action="RejectRepairOrder" method="post">
                <input type="hidden" asp-for="RepairOrderId" />

                <div class="form-group">
                    <label asp-for="RejectReason"></label>
                    <textarea asp-for="RejectReason" class="form-control" rows="6"></textarea>
                    <span asp-validation-for="RejectReason" class="text-danger"></span>
                </div>

                <div class="form-group mt-4 d-flex justify-content-between">
                    <button type="submit" class="btn btn-danger">Reject</button>
                    <a href="@Url.Action("DetailsCustomer", "RepairManagement", new { id = Model.RepairOrderId })" class="btn btn-secondary">Go Back</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}