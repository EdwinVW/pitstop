@model Pitstop.WebApp.ViewModels.RepairManagementViewModel
@{
    ViewData["Title"] = "Repair Orders Overview";
}
<h3 id="PageTitle">Repair Management - overview</h3>

<table class="table">
    <thead>
    <tr>
        <th>Customer Name</th>
        <th>LicenseNumber</th>
        <th>Repair Order Status</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var repairOrder in Model.RepairOrders)
    {
        <tr class="clickable" onclick="location.href = '@(Url.Action("Details", "RepairManagement", new { repairOrder = repairOrder.Id }))'">
            <td>@repairOrder.CustomerId</td>
            <td>@repairOrder.LicenseNumber</td>

            <td>
                @if (repairOrder.Status == RepairOrdersStatus.NotCreatedYet)
                {
                <button class="btn btn-primary" onclick="location.href='@Url.Action("New", "RepairManagement")'">Create Repair Order</button>
                }
                else
                {
                @repairOrder.Status
                }
            </td>

        </tr>
    }
    </tbody>
</table>